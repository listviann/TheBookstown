@model List<SessionCartViewModel>
@{
    string strTitle = "Cart";
    ViewBag.Title = strTitle;
}

<div>
    <h1>@strTitle</h1>
    <div>
        @if (Model is not null)
        {
            @if (Model.Count > 0)
            {
                <div>
                    <table>
                        <tr>
                            <th>Name</th><th>Price</th><th>Quantity</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Book!.BookName</td>
                                <td>@item.Book!.BookPrice</td>
                                <td>@item.Quantity</td>
                                <td>
                                    <form asp-area="" asp-controller="SessionCart" asp-action="Remove" asp-route-id="@item.Book.BookId" method="post">
                                        <input type="submit" value="Remove">
                                    </form>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            }
        }
        else
        {
            <h2>Cart is empty</h2>
        }
    </div>
</div>